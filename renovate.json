{
  "extends": ["config:base"],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": false
    },
    {
      "packagePatterns": ["@aws-cdk", "aws-sdk", "source-map-support"],
      "groupName": "AWS Dependencies",
      "enabled": true
    },
    {
      "packagePatterns": ["typescript", "ts-node", "node"],
      "groupName": "Core",
      "enabled": true,
      "pin": false
    },
    {
      "packagePatterns": ["react", "storybook"],
      "groupName": "React",
      "enabled": true,
      "pin": false
    },
    {
      "packagePatterns": ["eslint", "lerna", "prettier", "pre-commit"],
      "groupName": "Linters",
      "enabled": true,
      "automerge": true,
      "pin": false
    },
    {
      "packagePatterns": ["jest", "codecov"],
      "groupName": "Test Tooling",
      "enabled": true,
      "automerge": true,
      "pin": false
    },
    {
      "packagePatterns": ["rollup", "lerna", "babel", "webpack", "-loader"],
      "groupName": "Build Tooling",
      "enabled": true,
      "pin": false
    }
  ],
  "schedule": ["after 5pm on monday"],
  "updateNotScheduled": false,
  "timezone": "America/New_York"
}
